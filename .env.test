# define your env variables for the test env here
KERNEL_CLASS='App\Kernel'
APP_SECRET='your-test-secret-key'
SYMFONY_DEPRECATIONS_HELPER=999999

# Base de données de test
# - Dans les conteneurs Docker: utiliser le nom du service et le port interne
DATABASE_URL="mysql://app:password@database-test:3306/friendsapp_test"
# - En lançant les tests sur l'hôte (hors Docker): décommentez la ligne suivante
# DATABASE_URL="mysql://app:password@127.0.0.1:3307/friendsapp_test"

# Configuration Messenger pour tests
MESSENGER_TRANSPORT_DSN=doctrine://default?queue_name=test_messages

# Configuration Mailer pour tests
MAILER_FROM_EMAIL="test@friendsapp.local"
SLACK_WEBHOOK_URL="http://nginx/"
